    color: white;
    padding: 2px;
}

.order-cut-note {
    margin-left: 3px;
    font-size: 14px;
}

.order-cut-number {
    font-size: 14px;
    float: right;
}

.order-sum {
    height: 30px;
    padding: 5px 15px;
    font-size: 14px;
}

.order-sum-number {
    font-size: 14px;
    float: right;
    margin-right: 5px;
}

.note {
    padding: 5px 15px;
    background: white;
    margin-top: 10px;
}

.note-text {
    width: 95%;
    font-size: 12px;
    background: #f2f2f2;
    padding: 10px;
    height: 80px;
}

.price-view {
    width: 50%;
    padding: 20px;
    align-self: center;
    text-align: right;
}

