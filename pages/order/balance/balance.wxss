.cart-list-box {
    background: #fff;
    display: flex;
    font-size: 15px;
    border-bottom: 1px #e3e3e3 solid;
    height: 50px;
}

.list-info {
    width: 50%;
    padding: 5px 15px;
    align-self: center;
}

.list-info-size {
    font-size: 12px;
    color: #b1b1b1;
}

.icon-li-circle {
    margin-left: 15px;
    font-size: 20px;
}

.font20 {
    font-size: 20px;
}

.top-bar {
    height: 30px;
